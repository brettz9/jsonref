{
    "compilerOptions": {
      "incremental": true,
      "module": "NodeNext",
      "target": "es2020",
      "noImplicitAny": false,
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "strictNullChecks": true,
      "allowJs": false,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"]
  }
